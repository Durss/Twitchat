{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"strictNullChecks": false,
		"importHelpers": false,
		"experimentalDecorators": true,
		"sourceMap": false,
		"isolatedModules": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"outDir": "./server",
		"skipLibCheck": true,
		"incremental": true,
		"composite": true,
		"tsBuildInfoFile": "./server/.tsbuildinfo",
		"paths": {
			"@/*": [
				"src_back/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src_back/**/*.ts",
		"src_back/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"server",
		"static/labels.json"
	]
}