{
	"compilerOptions": {
		"module": "nodenext",
		"target": "esnext",
		"moduleResolution": "nodenext",
		"strict": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"strictNullChecks": false,
		"importHelpers": false,
		"experimentalDecorators": true,
		"sourceMap": false,
		"isolatedModules": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"outDir": "../server",
		"skipLibCheck": true,
		"incremental": true,
		"tsBuildInfoFile": "../server/.tsbuildinfo",
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"./**/*.ts",
		"./**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"server",
		"static/labels.json"
	]
}